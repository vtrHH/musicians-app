<div class="card card-custom" style="width: 25rem;">
  <div class="card-header card-header-custom">{{this.title}}</div>
  {{#if this.image}}
  <img src="{{this.image}}" class="card-img-top card-img-custom" alt="{{this.title}}">
  {{else}}
  <img src="/images/landing-page.jpg" class="card-img-top card-img-custom" alt="">
  {{/if}}
  <div class="card-body"> 
  <p class="card-text"><strong>Description:</strong> {{this.description}}</p>
  <div class="card-link-overview">
    <a href="#" class="card-link card-link-custom">Contact provider</a>
    <a href="/offer/{{this._id}}" class="card-link card-link-custom">See more details...</a>
  </div>
  </div>
</div>
