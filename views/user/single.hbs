<div class="user-header"> 
   <div> 
   <img src="{{user.image}}" alt="{{user.name}}" class="user-image" />
   </div>
   <h1>Welcome, {{user.name}}</h1> 
</div>



<div class="user-information">
   <span><strong>Hi, my name is</strong> {{user.name}}</span>
   {{#if user.image }}

   {{/if }}
   <span></span>
   {{#if user.description }}
   <p><strong>About me</strong> <br>{{user.description}}</p>
   {{/if }}
   {{#if user.experience }}
   <p><strong>My concert performance experience</strong><br> {{user.experience}}</p>
   {{/if }}
   {{#each user.skills }}
   <p><strong>How do I rate my musical skills <br></strong>{{this}}</p>
   {{/each }}
    {{#if user.url }}
   <p><strong>Have fun browsing my Website <br></strong>{{user.url}}</p>
   {{/if }}
</span>

</div>

<br>
<br>

<a href="/user/{{user._id}}/update" class="btn" class="user-update">Update your profile</a>
