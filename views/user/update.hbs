<h1>Update your profile</h1>

<form method="POST" action="/user/{{user._id}}/update" enctype="multipart/form-data">

<label for="input-image">Update profile picture</label>
<input type="file" id="input-image" name="image" value="{{user.image}}" accept="image/png, image/jpeg">

<label for="input-description">Tell us something about you</label>
<textarea name="description" id="input-description" cols="30" rows="5">{{user.description}}</textarea>
  
<label for="input-skills">Instruments / Skills you are mastering</label>
<textarea name="skills" id="input-skills" cols="30" rows="1">{{user.skills}}</textarea>

<label for="input-interests">Topics you are interested in</label>
<textarea name="interests" id="input-interests" cols="30" rows="1">{{user.interests}}</textarea>

  <label for="input-experience">Your experience level</label>
    <select name="experience" id="input-experience">
        <option value="" selected disabled>Experience</option>
        <option value="Beginner">Beginner</option>
        <option value="Intermediate">Intermediate</option>
        <option value="Advanced">Advanced</option>
        <option value="Pro">Pro</option>
    </select>

<label for="input-url">My Website</label>  
<input type="url" id="input-url" name="url" placeholder="URL" value="{{user.url}}">

<button>Update your Profile</button>

</form>
