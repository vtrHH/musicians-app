<span class="headerfilter">
<h1>Market Place</h1>
</span>
<span class="filter">
<p><h3>Filter by</h3></p>
</span>

<section class="buttons">
<button class="filterbutton"><a href="/offer/events">Events</a></button>
<button class="filterbutton"><a href="/offer/buy-and-sell">Buy & Sell</a></button>
<button class="filterbutton"><a href="/offer/services">Services / Trainings / Coaching</a></button>
</section>
<section class="posts">
{{#each offers}}

<div class="post-frontpage">
   <div class="title-frontpage">
      <p><strong>Title:</strong>      {{this.title}}</p>
   </div>
   <div class="typeof-frontpage">
      <p><strong>Type:</strong> {{this.typeof}}</p>
   </div>
   <div class="description-frontpage">
      <p> <strong>Description:</strong> <br> {{this.description}}</p>
   </div> <br><br>
   {{#if this.image}}
<div class="image-frontpage">
   <img src="{{image}}" alt="{{title}}">
</div> <br>
{{/if}}
{{#if this.condition}}
<div class="condition-frontpage">
   <p>Condition: {{this.condition}}</p>
</div>
{{/if}}
{{#if this.url}}
<div class="url-frontpage">
   <p>Website Link: <a href="{{this.url}}">{{this.url}}</a></p>
</div> 
{{/if}}


<button><a href="#">Contact Provider</a></button>
<button><a href="/offer/{{this._id}}">Check out details of this offer</a></button>
<div class="creator-frontpage">
   <span>by {{creator.name}} on {{{ date creationDate "DD/MM/YYYY" }}} at {{{ date creationDate "HH:mm" }}}</span>
   </div>
</div>
{{/each}}

