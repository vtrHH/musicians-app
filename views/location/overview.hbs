<div id="map"></div>
{{> leafletscript}}
<script src="scripts/map.js"></script>


<form class="form" method="POST">
    <label for="input-name">Name</label>
    <input type="text" id="input-name" name="name" placeholder="Name of the location">

    <label for="input-latitude">Location Latitude</label>
    <input type="text" id="lat" name="latitude" placeholder="latitude of the location">

    <label for="input-longitude">Location Longitude</label>
    <input type="text" id="lng" name="longitude" placeholder="longitude of the location">

    <label for="input-rating">Your rating</label>
    <input type="text" id="input-rating" name="rating" placeholder="Your rating of the location">

    <label for="input-message">Your Message</label>
    <input type="text" id="input-message" name="message" placeholder="Add some stuff">

    <button>Add your input</button>
</form>